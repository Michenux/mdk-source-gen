<adjava-project>

	<!-- Mobile -->
	<domains>
		<domain name="mbandroid">
			<projects replace="true">
				<project name="app" base-dir="app">
					<source-dir>src/main/java</source-dir>
					<assets-dir>src/main/assets</assets-dir>
					<layout-dir>src/main/res/layout</layout-dir>
					<string-dir>src/main/res/values</string-dir>
					<res-dir>src/main/res</res-dir>
					<android-manifest-file>src/main/AndroidManifest.xml</android-manifest-file>
					
					<resource-generators>
						<generator class="com.a2a.adjava.generator.impl.ProjectLayoutGenerator" />
						<generator class="com.a2a.adjava.generator.impl.PojoInterfaceGenerator" />
						<generator class="com.a2a.adjava.generator.impl.PojoImplGenerator" />
						<generator class="com.a2a.adjava.generator.impl.FactoryGenerator" />
						<generator class="com.a2a.adjava.generator.impl.FactoryInterfaceGenerator" />
						<generator class="com.a2a.adjava.generator.impl.EnumGenerator" />

						<generator class="com.a2a.adjava.generator.impl.DaoInterfaceGenerator" />
						<generator class="com.a2a.adjava.generator.impl.DaoGenerator" />

						<generator class="com.a2a.adjava.generator.impl.ViewModelGenerator" />
						<generator class="com.a2a.adjava.generator.impl.ViewModelInterfaceGenerator" />
						<generator class="com.a2a.adjava.generator.impl.ViewModelCreatorGenerator" />
						
						<generator class="com.a2a.adjava.generator.impl.ActionGenerator" />
						<generator class="com.a2a.adjava.generator.impl.ActionInterfaceGenerator" />

						<generator class="com.a2a.adjava.generator.impl.ScreenGenerator" />
						<generator class="com.a2a.adjava.generator.impl.AdapterGenerator" />
						<generator class="com.a2a.adjava.generator.impl.DialogGenerator" />
						<generator class="com.a2a.adjava.generator.impl.ApplicationInitGenerator" />

					</resource-generators>
				</project>
			</projects>
		</domain>
	</domains>

</adjava-project>